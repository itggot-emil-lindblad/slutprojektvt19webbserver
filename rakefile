require 'bundler'
Bundler.require
require_relative 'app'

task :run do
    run Sinatra::Application
end

namespace :db do
    task :seed do
        db = Sequel.connect(ENV['DATABASE_URL'] || 'sqlite://db/data.db')        
        db.create_table :posts do
            primary_key :Id
            String :PostTitle, null: false
            String :PostText, null: false
            String :ImgPath
            String :PostDate, null: false
        end
    end

end