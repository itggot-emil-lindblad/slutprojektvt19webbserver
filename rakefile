require 'bundler'
Bundler.require
require_relative 'app'

task :run do
    run Sinatra::Application
end

namespace :db do
    task :seed do
        db = Sequel.connect(ENV['DATABASE_URL'] || 'sqlite://db/data.db')        
        db.create_table :users do
            primary_key :Id
            String :UserName
            String :Hash
        end
    end

end