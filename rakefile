require 'bundler'
Bundler.require
require_relative 'app'

task :run do
    run Sinatra::Application
end

namespace :db do
    task :seed do
        db =Sequel.connect(ENV['DATABASE_URL'] || 'sqlite://db/data.db')        
        db.create_table :items do
            primary_key :id
            String :name
            Float :price
        end
    end

end